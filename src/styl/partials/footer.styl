.footer
  background-image url("../img/backgrounds/footer-background.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  bottom 0
  display flex
  flex-direction column
  height 359px
  justify-content center
  padding 0 100px
  position absolute
  width 100%

  &-logo
    height 85px
    width 128px

    &-container
      margin-bottom 25px
      width 100%

  &-content
    border-top solid 1px $c-white
    display flex
    justify-content space-between
    padding-top 28px
    width 100%

  &-link
    &-container
      display flex

      & a
        margin-right 50px

  &-copyright
    color $c-white
    display block
    font-family "DINNextW01Regular"
    font-size 14px
    font-weight normal
    letter-spacing -0.18px
    margin-top 52px

  &-contacts
    text-align right

.phone,
.mail,
.address
  color $c-white
  font-family "DINNextW01Regular"
  font-size 18px
  font-weight normal
  letter-spacing -0.23px

  &:before
    background-size contain
    content ""
    display inline-block
    margin-right 9px
    vertical-align middle

.phone
    display inline-block
    margin-right 29px

  &:before
    background-image url("../img/icons/phone-icon.png")
    height 17px
    width 17px

.mail
  &:before
    background-image url("../img/icons/mail-icon.png")
    height 12px
    width 20px

.address
  display block
  line-height 26px
  margin-top 23px
  max-width 380px

  &:before
    background-image url("../img/icons/pin-icon.png")
    height 21px
    width 15px

@media screen and (max-width 1220px)
  .footer
    padding 0 50px

@media screen and (max-width 1115px)
  .footer
    &-link
      &-container
        flex-wrap wrap
        width 280px

        & a
          margin-bottom 15px

    &-copyright
      margin-top 30px

@media screen and (max-width 765px)
  .footer
    background-image url("../img/backgrounds/footer-background-mobile.jpg")
    height 500px
    justify-content flex-start
    padding 25px 30px 0 30px

    &-logo
      height 61px
      width 92px

    &-content
      flex-direction column

    &-link
      &-container
        flex-direction column
        flex-wrap no-wrap
        width auto

    &-contacts
      margin-top 20px

    &-copyright
      bottom 20px
      font-size 12px
      position absolute

  .link-section,
  .phone,
  .mail,
  .address
    font-size 14px !important

  .address
    margin-left auto
    max-width 260px

  .phone
    display block
    margin 0 0 15px 0