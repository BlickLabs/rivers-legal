.membersTemplate
  display flex
  flex-wrap wrap
  padding-top 94px

  .leftBar
    background-image url("../img/backgrounds/members-template-bg.jpg")
    background-position bottom
    background-size cover
    min-width: 493px
    padding 58px 0
    width 493px

    &-content
      margin 0 82px 0 auto
      width 238px

    &-area
      color $c-strongBlue
      font-family 'DINNextW01Bold'
      font-size 15px
      font-weight normal
      letter-spacing 3.2px
      text-transform uppercase
      -webkit-font-smoothing antialiased

    &-member
      color #42507a
      font-family 'DINNextW01Regular'
      font-size 27px
      font-weight normal
      letter-spacing 0.4px
      margin 20px 0 30px 0
      -webkit-font-smoothing antialiased

    &-photo
      height 287px
      width 238px

  .information
    display flex
    flex 1
    flex-direction column
    padding 53px 80px

    &-title
      color $c-strongBlue
      font-family 'PlayfairDisplayRegular'
      font-size 27px
      font-weight normal
      letter-spacing -0.2px
      margin-bottom 20px
      -webkit-font-smoothing antialiased

    &-text
      color $c-strongBlue
      font-family 'DINNextW01Regular'
      font-size 18px
      font-weight normal
      letter-spacing 0.3px
      line-height 26px
      margin-bottom 25px
      -webkit-font-smoothing antialiased

    ul
      margin 0
      padding 0 0 0 18px

    .representative, .industry
      margin-bottom 30px

      .typeText
        color $c-strongBlue
        font-size 13px
        font-family 'DINNextW01Regular'
        font-weight normal
        letter-spacing 1.1px
        text-transform uppercase

        &-wrapper
          border-bottom solid 1px #e9e9e9
          display flex
          flex-wrap wrap
          justify-content space-between
          max-width 718px
          padding-bottom 30px
          // width 718px

        &Wrapp
          display flex
          flex-wrap wrap

        &-container
          align-items center
          display flex
          height 32px
          padding 0 20px
          width 347px

          &:nth-child(odd)
            background-color #f7f7f7
            // background-color red

    .languages
      ul .information-text
        margin-bottom 0

@media screen and (max-width 1440px)
  .membersTemplate
    .information
      .overview
        max-width 696px

@media screen and (max-width 1386px) and (min-width 1039px)
  .membersTemplate
    .information .representative,
    .information .industry
      .typeTextWrapp
        flex-direction column

      .typeText-container
        order unset !important

@media screen and (max-width 892px) and (min-width 320px)
  .membersTemplate
    .information .representative,
    .information .industry
      .typeTextWrapp
        flex-direction column

      .typeText-container
        order unset !important

@media screen and (max-width 1038px)
  .membersTemplate
    .leftBar
      min-width 100%
      width 100%

      &-content
        margin 0 auto

@media screen and (max-width 520px)
  .membersTemplate
    .information
      padding 40px 30px

      .representative, .industry
        .typeText
          &-container
            width 260px

