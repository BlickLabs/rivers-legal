.contact
  margin-top 94px

  .cover
    align-items center
    background-image url("../img/backgrounds/contact-cover.jpg")
    background-position center
    background-size cover
    display flex
    height: 324px
    padding-left 114px

    .card
      background-color #202f5f
      height 216px
      padding 35px 39px 0 45px
      position relative
      width 553px

      &:before
        background-color #465893
        bottom 0
        content ""
        display block
        left 0
        position absolute
        top 0
        width 6px

      .title
        color $c-white
        font-family 'PlayfairDisplay'
        font-size 31px
        font-weight normal
        letter-spacing 0.2px
        line-height 26px

      .second-row
        align-items flex-end
        display flex
        justify-content space-between

      &-address
        color $c-white
        font-family 'DINNextW01Regular'
        font-size 18px
        font-weight normal
        letter-spacing 0.2px
        line-height 27px
        margin 28px 20px 0 0
        max-width 270px

      .wayOfContact
        color $c-white
        font-family 'DINNextW01Regular'
        font-size 15px
        font-weight normal
        letter-spacing 0.2px
        margin-top 12px

        &-container
          display flex
          flex-direction column

        &.card-mail
          &:before
            background-image url("../img/icons/contact-mail-icon.png")
            height 8px
            width 12px

        &.card-phone
          &:before
            background-image url("../img/icons/contact-phone-icon.png")
            height 11px
            width 10px

        &:before
          background-size contain
          background-repeat no-repeat
          content ""
          display inline-block
          margin-right 11px

  .leave
    background-image url("../img/backgrounds/contact-form-bg.jpg")
    background-position top center
    background-size cover
    padding 82px 30px

    .title
      color $c-strongBlue
      font-family 'PlayfairDisplayRegular'
      font-size 33px
      font-weight normal
      margin-bottom 52px
      padding-bottom 12px
      position relative
      text-align center
      width 100%

      &:before
        background-color #d3d3d3
        bottom 0
        content ""
        height 1px
        left 0
        margin 0 auto
        position absolute
        right 0
        width 385px

      &:after
        background-color $c-strongBlue
        bottom 0
        content ""
        height 1px
        left 0
        margin 0 auto
        position absolute
        right 0
        width 146px
    
    form
      display flex
      flex-direction column
      margin 0 auto
      max-width 616px

      label
        color $c-strongBlue
        font-family 'DINNextW01Regular'
        font-size 18px
        font-weight normal
        letter-spacing 0.3px
        margin-bottom 10px
      
      input,
      textarea
        background-color $c-white
        border solid 1px #cbcbcb
        color $c-strongBlue
        font-family 'DINNextW01Regular'
        font-size 18px
        font-weight normal
        letter-spacing 0.3px
        margin-bottom 28px
        padding 0 15px
      
      input
        height 48px
      
      textarea
        height 144px
        padding-bottom 15px
        padding-top 15px
      
      button
        cursor pointer
        margin 6px 0 0 auto
        min-width 180px

@media screen and (max-width 749px)
  .contact
    .cover
      height auto
      justify-content center
      padding 50px 30px

      .card
        height auto
        padding 35px 30px
        width auto

        &-address
          margin-right 0

        .second-row
          align-items flex-start
          flex-direction column

@media screen and (max-width 480px)
  .contact
    .leave
      padding 50px 30px

      .title
        font-size 25px

        &:before
          width 250px
