<nav class="nav">
  <div>
    <a href="index.html">
      <img class="nav-logo" src="{{es.nav.logo}}" alt="{{es.nav.logoAlt}}">
    </a>
  </div>
  <div class="nav-option-container">
    {% for section in es.nav.sections %}
    <div class="nav-option-content">
      <a href="{{section.link}}">
        <span class="nav-option {% if view_name == section.viewName %}active{% endif %}">{{section.name}}</span>
      </a>
    </div>
    {% endfor %}
    <div class="nav-lang-container">
      <div class="nav-lang-content">
        <a href="{% if section == 'en/index' %} /es/index.html {% endif %}">
          <span class="nav-lang {% if section == 'es/index' or section == 'index' %} nav-lang-active {% endif %}">ES</span>
        </a>
      </div>
      <div class="nav-lang-content">
        <a href="{% if section == 'es/index' or section == 'index' %} /en/index.html {% endif %}">
          <span class="nav-lang">EN</span>
        </a>
      </div>
    </div>
  </div>

  <div data-attribute="" class="hamburger-visibility"  id="hamburgerMenu">
    <div class="nav-hamburguer" data-attribute="">
      <div class="hamburger-line-icon-container" data-attribute="">
        <div class="hamburger-line-icon" data-attribute=""></div>
        <div class="hamburger-line-icon" data-attribute=""></div>
        <div class="hamburger-line-icon" data-attribute=""></div>
      </div>
    </div>
  </div>
  <div class="hamburger-menu-container" id="menuContainer" data-attribute="">
    <div class="hamburger-menu-header" data-attribute="">
      <div class="" data-attribute="">
        <a href="index.html" data-attribute="">
          <img class="hamburger-logo" src="{{es.nav.logo}}" data-attribute="" alt="{{es.nav.hamburgerLogoAlt}}">
        </a>
      </div>
      <div id="hideHamburger">
        <img class="hamburger-close" src="/img/icons/close-menu.png" alt="{{es.nav.hamburgerCloseAlt}}">
      </div>
    </div>
    <div class="hamburger-menu-body nunitosans-regular" data-attribute="">
      <div class="nav-lang-container">
        <div class="nav-lang-content">
          <a href="{% if section == 'en/index' %} /es/index.html {% endif %}">
            <span class="nav-lang {% if section == 'es/index' or section == 'index' %} nav-lang-active {% endif %}">ES</span>
          </a>
        </div>
        <div class="nav-lang-content">
          <a href="{% if section == 'es/index' or section == 'index' %} /en/index.html {% endif %}">
            <span class="nav-lang">EN</span>
          </a>
        </div>
      </div>
      {% for section in es.nav.sections %}
      <div class="hamburger-text-container">
        <a href="{{section.link}}">
          <span class="hamburger-text {% if view_name == nav.viewName %}hamburger-active{% endif %}">{{section.name}}</span>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</nav>
