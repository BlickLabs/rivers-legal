{% extends "partials/base.njk" %}

{% block title %}Member{% endblock %}

{% set meta_description = "Get to know our members" %}
{% set og_url = "" %}
{% set og_title = "Member | Rivers Legal" %}
{% set og_description = "Get to know our members" %}
{% set og_img = "" %}
{% set og_img_width = "" %}
{% set og_img_height = "" %}

{% set view_name = "members" %}

{% block content %}
<section class="membersTemplate">
  <section class="leftBar">
    <div class="leftBar-content">
      <span class="leftBar-area">{{ en.membersTemplate.leftBar.area }}</span>
      <h1 class="leftBar-member">{{ en.membersTemplate.leftBar.member }}</h1>
      <img class="leftBar-photo" src="{{ en.membersTemplate.leftBar.photo }}" alt="{{ en.membersTemplate.leftBar.member }}">
    </div>
  </section>

  <section class="information">
    <div class="overview">
      <h2 class="information-title">Overview</h2>
      {% for overview in en.membersTemplate.overview.paragraphs %}
        <p class="information-text">{{ overview.text }}</p>
      {% endfor %}
    </div>

    <div class="representative">
      <h2 class="information-title">Representative Practice</h2>
      <div class="typeText-wrapper">
        <div>
          {% for col1 in en.membersTemplate.representative.practiceCol1 %}
            <div class="typeText-container">
              <span class="typeText">{{ col1.text }}</span>
            </div>
          {% endfor %}
        </div>
        <div>
          {% for col2 in en.membersTemplate.representative.practiceCol2 %}
            <div class="typeText-container">
              <span class="typeText">{{ col2.text }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="industry">
      <h2 class="information-title">Industry</h2>
      <div class="typeText-wrapper">
        <div>
          {% for col1 in en.membersTemplate.industry.typesCol1 %}
            <div class="typeText-container">
              <span class="typeText">{{ col1.text }}</span>
            </div>
          {% endfor %}
        </div>
        <div>
          {% for col2 in en.membersTemplate.industry.typesCol2 %}
            <div class="typeText-container">
              <span class="typeText">{{ col2.text }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="education">
      <h2 class="information-title">Education</h2>
      <ul>
        {% for list in en.membersTemplate.education.list %}
          <li class="information-text">{{ list.item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="affiliations">
      <h2 class="information-title">Affiliations</h2>
      <ul>
        {% for list in en.membersTemplate.affiliations.list %}
          <li class="information-text">{{ list.item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="recognitions">
      <h2 class="information-title">Recognitions</h2>
      <ul>
        {% for list in en.membersTemplate.recognitions.list %}
          <li class="information-text">{{ list.item }}</li>
        {% endfor %}
      </ul>
    </div>

    <div class="languages">
      <h2 class="information-title">Languages</h2>
      <ul>
        {% for list in en.membersTemplate.languages.list %}
          <li class="information-text">{{ list.item }}</li>
        {% endfor %}
      </ul>
    </div>
  </section>
</section>
{% endblock %}