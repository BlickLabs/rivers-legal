{% extends "partials/base.njk" %}

{% block title %}Member{% endblock %}

{% set meta_description = "Get to know our members" %}
{% set og_url = "" %}
{% set og_title = "Member | Rivers Legal" %}
{% set og_description = "Get to know our members" %}
{% set og_img = "/img/seo/seo-members-template.jpg" %}
{% set og_img_width = "" %}
{% set og_img_height = "" %}

{% set view_name = "members" %}

{% block content %}
    <section class="membersTemplate">
        <section class="leftBar">
            <div class="leftBar-content">
                <span class="leftBar-area">{{ en.membersTemplate11.leftBar.area }}</span>
                <span class="leftBar-area"></span>
                <h1 class="leftBar-member">{{ en.membersTemplate11.leftBar.member }}</h1>
                <img class="leftBar-photo" src="{{ en.membersTemplate11.leftBar.photo }}"
                     alt="{{ en.membersTemplate11.leftBar.member }}">
            </div>
        </section>

        <section class="information">
            <div class="overview">
                <h2 class="information-title">Overview</h2>
                {% for overview in en.membersTemplate11.overview.paragraphs %}
                    <p class="information-text">{{ overview.text }}</p>
                {% endfor %}
            </div>

            <div class="representative">
                <h2 class="information-title">Representative Practice</h2>
                <div class="typeText-wrapper">
                    <div class="typeTextWrapp">
                        {% for cols in en.membersTemplate11.representative.practice %}
                            <div class="typeText-container" style="{{ cols.order }}">
                                <span class="typeText">{{ cols.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="industry">
                <h2 class="information-title">Industry</h2>
                <div class="typeText-wrapper">
                    <div class="typeTextWrapp">
                        {% for cols in en.membersTemplate11.industry.types %}
                            <div class="typeText-container" style="{{ cols.order }}">
                                <span class="typeText">{{ cols.text }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="education">
                <h2 class="information-title">Education</h2>
                <ul>
                    {% for list in en.membersTemplate11.education.list %}
                        <li class="information-text">{{ list.item }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="languages">
                <h2 class="information-title">Languages</h2>
                <ul>
                    {% for list in en.membersTemplate11.languages.list %}
                        <li class="information-text">{{ list.item }}</li>
                    {% endfor %}
                </ul>
            </div>
        </section>
    </section>
{% endblock %}